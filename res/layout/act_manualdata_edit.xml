<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent" >        <include         android:id="@+id/title"        layout="@layout/title_bar"/>        <EditText         android:id="@+id/analysis_edit"        android:layout_width="match_parent"        android:layout_height="@dimen/contentHeigh"        style="@style/hintText"        android:layout_alignParentBottom="true"        android:layout_margin="10dp"        android:padding="@dimen/contentPadding"        android:background="@drawable/bg_optionlist_select"        android:gravity="left"        android:hint="请输入综合分析"/><!--     android:background="@color/transparent" -->        <ListView         android:id="@+id/data_list"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_below="@id/title"        android:layout_margin="10dp"        android:divider="@null"        android:dividerHeight="5dp"        android:layout_above="@id/analysis_edit"/></RelativeLayout>