<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16.0dip" >
<!-- 暂时没用这个文件 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20.0dip"
        android:text="回放时间"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/txt_33_seletor" />

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_optionlist_top_select"
        android:clickable="true"
        android:gravity="center_vertical"
        android:onClick="StartTime"
        android:padding="10.0dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="从"
            android:paddingLeft="20.0dip"
            android:paddingRight="30.0dip" />

        <TextView
            android:id="@+id/startTextView"
            style="@style/ItemTitleText"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_optionlist_bottom_select"
        android:clickable="true"
        android:gravity="center_vertical"
        android:onClick="EndTime"
        android:padding="10.0dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="到"
            android:paddingLeft="20.0dip"
            android:paddingRight="30.0dip" />

        <TextView
            android:id="@+id/endTextView"
            style="@style/ItemTitleText"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="" />
    </TableRow>

    <Button
        style="@style/FilterSubText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dip"
        android:onClick="Sub"
        android:paddingBottom="10.0dip"
        android:paddingTop="10.0dip"
        android:text="@string/sure" />

</TableLayout>