<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_card_normal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80.0dip"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/SensorWarnIcon"
            android:layout_width="32.0dip"
            android:layout_height="32.0dip"
            android:layout_marginLeft="16.0dip"
            android:layout_marginRight="16.0dip"
            android:src="@drawable/bg_warning_over_on" />

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/SensorWarnPropertyValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&lt;15°"
                android:textColor="#ff222222"
                android:textSize="28.0sp" />

            <TextView
                android:id="@+id/SensorWarnTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08:00-12:00"
                android:textColor="#ff888888"
                android:textSize="14.0sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/switch_state_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16.0dip"
            android:text="开"
            android:textColor="#ffbbbbbb"
            android:textSize="16.0sp" />

        <CheckBox
            android:id="@+id/switch_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16.0dip"
            android:button="@drawable/ic_switch_onoff"
            android:focusable="false" />
    </LinearLayout>

</LinearLayout>