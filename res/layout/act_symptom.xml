<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/white" >        <GridView         android:id="@+id/part_grid"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_margin="10dp"        android:numColumns="5"        android:horizontalSpacing="2dp"        android:verticalSpacing="2dp"        android:stretchMode="columnWidth"/>        <Button         android:id="@+id/diagnose_btn"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_margin="10dp"        android:layout_alignParentBottom="true"        android:background="@drawable/btn_darkgreen_select"        android:text="开始诊断"/>        <ImageView         android:id="@+id/fish_img"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_below="@id/part_grid"        android:layout_above="@id/diagnose_btn"        android:layout_margin="10dp"        android:scaleType="fitXY"        android:src="@drawable/fish_crab"/>        </RelativeLayout>