<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6.0dip"
    android:background="@drawable/bg_card_normal"
    android:orientation="vertical"
    android:paddingBottom="10.0dip"
    android:paddingTop="6.0dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="64.0dip"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/image_auto_mode"
            android:layout_width="35.0dip"
            android:layout_height="35.0dip"
            android:layout_marginLeft="16.0dip"
            android:layout_marginRight="16.0dip"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_contorl_auto_off" />

        <TextView
            android:id="@+id/time_bucket"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text=""
            android:textColor="#ff222222"
            android:textSize="24.0sp" />

        <TextView
            android:id="@+id/switch_state_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开启"
            android:textColor="#ffbbbbbb"
            android:textSize="20.0sp" />

        <CheckBox
            android:id="@+id/switch_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.0dip"
            android:layout_marginRight="16.0dip"
            android:button="@drawable/ic_switch_onoff"
            android:focusable="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="72.0dip"
        android:layout_marginLeft="16.0dip"
        android:layout_marginRight="16.0dip"
        android:background="@drawable/activity_farm_monitor_detail_ctrler_settings_list_item_shape"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14.0dip"
                android:text="持续时长"
                android:textColor="#ffbbbbbb"
                android:textSize="14.0sp" />

            <TextView
                android:id="@+id/continuation_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/textView2"
                android:layout_below="@id/textView2"
                android:gravity="center|right"
                android:paddingLeft="6.0dip"
                android:paddingRight="6.0dip"
                android:text=""
                android:textColor="#ff222222"
                android:textSize="24.0sp" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/continuation_time"
                android:layout_alignBottom="@id/continuation_time"
                android:layout_alignRight="@id/textView2"
                android:layout_toRightOf="@id/continuation_time"
                android:text="分钟"
                android:textColor="#ffbbbbbb"
                android:textSize="14.0sp" />
            
            
        </RelativeLayout>

        <View
            android:layout_width="1.0px"
            android:layout_height="fill_parent"
            android:background="@color/Gray"
            android:orientation="vertical" />

        <RelativeLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14.0dip"
                android:text="间隔时间"
                android:textColor="#ffbbbbbb"
                android:textSize="14.0sp" />

            <TextView
                android:id="@+id/interval_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/TextView01"
                android:layout_alignLeft="@id/TextView01"
                android:gravity="center|right"
                android:paddingLeft="6.0dip"
                android:paddingRight="6.0dip"
                android:text="15"
                android:textColor="#ff222222"
                android:textSize="24.0sp" />

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/interval_time"
                android:layout_alignBottom="@id/interval_time"
                android:layout_toRightOf="@id/interval_time"
                android:text="分钟"
                android:textColor="#ffbbbbbb"
                android:textSize="14.0sp" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/control_loop"
        android:layout_width="fill_parent"
        android:layout_height="32.0dip"
        android:layout_marginTop="8.0dip"
        android:drawableLeft="@drawable/ic_control_loop"
        android:drawablePadding="20.0dip"
        android:gravity="center_vertical"
        android:paddingLeft="22.0dip"
        android:text="@id/control_loop"
        android:textColor="#ff888888"
        android:textSize="14.0sp" />

    <TextView
        android:id="@+id/ControlStart"
        android:layout_width="fill_parent"
        android:layout_height="32.0sp"
        android:drawableLeft="@drawable/ic_control_start"
        android:drawablePadding="18.0dip"
        android:gravity="center_vertical"
        android:paddingLeft="22.0dip"
        android:text="当土壤温度AE0021小于32°C"
        android:textColor="#ff888888"
        android:textSize="14.0sp" />

    <TextView
        android:id="@+id/ControlStop"
        android:layout_width="fill_parent"
        android:layout_height="32.0sp"
        android:drawableLeft="@drawable/ic_control_stop"
        android:drawablePadding="18.0dip"
        android:gravity="center_vertical"
        android:paddingLeft="22.0dip"
        android:text="当土壤温度AE0021大于32°C"
        android:textColor="#ff888888"
        android:textSize="14.0sp" />

</LinearLayout>