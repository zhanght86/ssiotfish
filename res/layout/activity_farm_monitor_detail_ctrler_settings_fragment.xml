<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ListView
            android:id="@android:id/list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:listSelector="@android:color/transparent"
            android:paddingLeft="8.0dip"
            android:paddingRight="8.0dip"
            android:paddingTop="8.0dp" />
    </android.support.v4.widget.SwipeRefreshLayout>

    <net.i2p.android.ext.floatingactionbutton.FloatingActionsMenu
        android:id="@android:id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center|right"
        android:layout_margin="16.0dip"
        fab:fab_addButtonColorNormal="@color/yellow"
        fab:fab_addButtonColorPressed="@color/shnesYellow"
        fab:fab_colorDisabled="@color/cicleColor"
        android:visibility="gone"
        fab:fab_labelsPosition="left" >

        <net.i2p.android.ext.floatingactionbutton.FloatingActionButton
            android:id="@android:id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorDisabled="@color/cicleColor"
            fab:fab_colorNormal="@color/white"
            fab:fab_colorPressed="@color/cicleColor"
            fab:fab_icon="@drawable/ic_contorl_auto_on"
            fab:fab_size="mini"
            fab:fab_title="新增智能控制" />

        <net.i2p.android.ext.floatingactionbutton.FloatingActionButton
            android:id="@android:id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorDisabled="@color/cicleColor"
            fab:fab_colorNormal="@color/white"
            fab:fab_colorPressed="@color/cicleColor"
            fab:fab_icon="@drawable/ic_contorl_timing_on"
            fab:fab_size="mini"
            fab:fab_title="新增定时控制" />
    </net.i2p.android.ext.floatingactionbutton.FloatingActionsMenu>

</FrameLayout>